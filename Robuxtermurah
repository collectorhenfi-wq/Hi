<script>
let selectedPaket=''; let hargaSatuan=0;

function lanjut(){
  const user=document.getElementById('username').value.trim();
  if(!user){alert("Masukkan username Roblox kamu dulu!"); return;}
  document.getElementById('hargaList').style.display='block';
  document.getElementById('jumlahBeli').style.display='none';
  document.getElementById('konfirmasi').style.display='none';
  window.scrollTo({top:document.body.scrollHeight,behavior:'smooth'});
}

function tampilkanJumlah(paket,harga){
  selectedPaket=paket; hargaSatuan=harga;
  document.getElementById('jumlahBeli').style.display='block';
  document.getElementById('konfirmasi').style.display='none';
  document.getElementById('jumlahInput').value=1;
  window.scrollTo({top:document.body.scrollHeight,behavior:'smooth'});
}

function hitungHarga(){
  const user=document.getElementById('username').value.trim();
  const jumlah=parseInt(document.getElementById('jumlahInput').value);
  if(!jumlah||jumlah<1){alert("Masukkan jumlah yang valid!"); return;}
  const total=hargaSatuan*jumlah;
  document.getElementById('infoUser').innerHTML="ðŸ‘¤ Username Roblox: <b>"+user+"</b>";
  document.getElementById('infoPaket').innerHTML="ðŸ“¦ Paket Dipilih: <b>"+selectedPaket+"</b> â€” Jumlah: <b>"+jumlah+"</b>";
  document.getElementById('totalHarga').innerHTML="Rp"+total.toLocaleString('id-ID');
  document.getElementById('konfirmasi').style.display='block';
  window.scrollTo({top:document.body.scrollHeight,behavior:'smooth'});
}
</script>

